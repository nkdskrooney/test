package com.internousdev.listening.action;

import java.sql.SQLException;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.listening.dao.BuyItemCompleteDAO;
import com.opensymphony.xwork2.ActionSupport;
public class BuyItemCompleteAction extends ActionSupport implements SessionAware {
	public Map<String, Object> session;
	private BuyItemCompleteDAO buyItemCompleteDAO = new BuyItemCompleteDAO();

	public String execute() throws SQLException {
		buyItemCompleteDAO.buyItemeInfo(
			session.get("itemId").hashCode(),
			session.get("total_price").hashCode(),
			session.get("PurchaseNumber").hashCode(),
			session.get("LoginId").toString(),
			session.get("payment").toString(),
			session.get("img_address").toString());

		String result = SUCCESS;
		return result;
	}
	@Override
	public void setSession(Map<String, Object> session) {
		this.session = session;
	}
}
