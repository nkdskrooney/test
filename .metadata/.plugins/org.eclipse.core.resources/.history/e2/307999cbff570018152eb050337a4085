package com.internousdev.miamiburger.action;

import java.util.Arrays;
import java.util.List;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.miamiburger.dto.CartProductInfoDTO;
import com.opensymphony.xwork2.ActionSupport;

/*
 * cartListのCartProductInfoDTOに入力されたaddressを追加する。
 */
public class SettlementConfirmAction extends ActionSupport implements SessionAware{
	
	public Map<String,Object> session;
	
	private String eachSelectAddress;

	public String execute(){
		
		@SuppressWarnings("unchecked")
		List<CartProductInfoDTO> cartDTOList = (List<CartProductInfoDTO>) session.get("cartList");
		
		List<String> eachAddress = Arrays.asList(eachSelectAddress.split(", "));
		int kessaiPrice = 0;
		for(int i = 0; i<cartDTOList.size(); i++ ){
			cartDTOList.get(i).setAddress(eachAddress.get(i));
			kessaiPrice += cartDTOList.get(i).getTotalPrice();
		}
		
		session.put("kessaiDTOList", cartDTOList);
		session.put("kessaiPrice",kessaiPrice);
		return SUCCESS;
	}

	public Map<String, Object> getSession() {
		return session;
	}

	public void setSession(Map<String, Object> session) {
		this.session = session;
	}

	public String getEachSelectAddress() {
		return eachSelectAddress;
	}

	public void setEachSelectAddress(String eachSelectAddress) {
		this.eachSelectAddress = eachSelectAddress;
	}
	
	
	
}
