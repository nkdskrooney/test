package com.internousdev.toolbox.action;

import java.sql.SQLException;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.toolbox.dao.CartInsertDAO;
import com.internousdev.toolbox.dto.LoginDTO;
import com.opensymphony.xwork2.ActionSupport;

public class CartInsertAction extends ActionSupport implements SessionAware{

	public Map<String, Object> session;
	private int itemId;
	private int count;

	public String execute(){
		String result;
		String userId = null;
		CartInsertDAO dao = new CartInsertDAO();

	//StartActionで確認したtemp_user_idを取得する
		String tempUserId = session.get("temp_user_id").toString();

	//ログイン時カート情報をinsertする
		if(session.containsKey("loginUser")){
			LoginDTO loginDTO = (LoginDTO) session.get("loginUser");
			userId = loginDTO.getUserId();
			try {
				dao.CartInsert(userId, tempUserId, itemId, count);
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
	//未ログイン時カート情報をinsertする
		if(!(session.containsKey("loginUser"))){
			try {
				dao.CartInsert(tempUserId, itemId, count);
			} catch (SQLException e) {
				e.printStackTrace();
			}
		}
	//temp_user_idがsessionから消えている時にstartActionを実行する。
		if(session.containsKey("temp_user_id")){
			return ERROR;
		}
	//CartSelectActionで使用するため必要事項をsessionへ格納する。
		session.put("userId", userId);

		result = SUCCESS;
		return result;
	}

	public Map<String, Object> getSession() {
		return session;
	}

	public void setSession(Map<String, Object> session) {
		this.session = session;
	}

	public int getItemId() {
		return itemId;
	}

	public void setItemId(int itemId) {
		this.itemId = itemId;
	}

	public int getCount() {
		return count;
	}

	public void setCount(int count) {
		this.count = count;
	}



}
