package com.internousdev.listening.action;

import java.util.ArrayList;
import java.util.List;
import java.util.Map;

import org.apache.struts2.interceptor.SessionAware;

import com.internousdev.listening.dao.ItemDAO;
import com.internousdev.listening.dto.ItemDTO;
import com.opensymphony.xwork2.ActionSupport;

public class BuyItemCartAction extends ActionSupport implements SessionAware{
//sessionの定義
	public Map<String,Object>session;
//ArrayList「itemList」の作成
	public ArrayList<ItemDTO> itemList = new ArrayList<>();
//各値のフィールドの作成
	public int PurchaseNumber;
	public String payment;
	public String pay;
	public int itemId;

	@SuppressWarnings("unchecked")
	public String execute(){
//resultの結果：SUCCESSを挿入
		String result=SUCCESS;
//支払い方法の決定（"1"orその他）
		if(pay.equals("1")) {
			payment = "現金払い";
		}else {
			payment = "クレジットカード";
		}
		session.put("payment", payment);

//ItemDAOのインスタンス作成
		ItemDAO dao = new ItemDAO();
//ArrayList「itemList」に購入情報を挿入(上記でsessionに格納した購入数、支払い方法も挿入済)
		itemList = (ArrayList<ItemDTO>) dao.getItemInfo(itemId, payment, PurchaseNumber);
//itemList
		if(session.containsKey("itemList")){
			ArrayList<ItemDTO> addList = new ArrayList<>();
			ArrayList<ItemDTO> itemList = (ArrayList<ItemDTO>) session.get("itemList");

		}
			ArrayList<ItemDTO> stockList = (ArrayList<ItemDTO>) session.get("itemList");

			addList.addAll(stockList);
			addList.addAll(itemList);

			session.put("addList", addList);

		}else{
			session.put("itemList", itemList);
		}

		return result;
	}

	public Map<String, Object> getSession() {
		return session;
	}
	public void setSession(Map<String, Object> session) {
		this.session = session;
	}

	public List<ItemDTO> getItemList() {
		return itemList;
	}

	public void setItemList(List<ItemDTO> itemList) {
		this.itemList = itemList;
	}
	public int getPurchaseNumber() {
		return PurchaseNumber;
	}

	public void setPurchaseNumber(int purchaseNumber) {
		PurchaseNumber = purchaseNumber;
	}

	public String getPayment() {
		return payment;
	}

	public void setPayment(String payment) {
		this.payment = payment;
	}

	public String getPay() {
		return pay;
	}

	public void setPay(String pay) {
		this.pay = pay;
	}


	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}



}
